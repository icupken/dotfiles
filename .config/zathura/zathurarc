#
# Dracula color theme
#

set notification-error-bg       "#ff6655" # Red
set notification-error-fg       "#bbc2cf" # Foreground
set notification-warning-bg     "#51afef" # Orange
set notification-warning-fg     "#44475a" # Selection
set notification-bg             "#282c34" # Background
set notification-fg             "#bbc2cf" # Foreground

set completion-bg               "#282c34" # Background
set completion-fg               "#6272a4" # Comment
set completion-group-bg         "#282c34" # Background
set completion-group-fg         "#6272a4" # Comment
set completion-highlight-bg     "#44475a" # Selection
set completion-highlight-fg     "#bbc2cf" # Foreground

set index-bg                    "#282c34" # Background
set index-fg                    "#bbc2cf" # Foreground
set index-active-bg             "#44475a" # Current Line
set index-active-fg             "#bbc2cf" # Foreground

set inputbar-bg                 "#282c34" # Background
set inputbar-fg                 "#bbc2cf" # Foreground
set statusbar-bg                "#282c34" # Background
set statusbar-fg                "#bbc2cf" # Foreground

set highlight-color             "#51afef" # Orange
set highlight-active-color      "#ff79c6" # Pink

set default-bg                  "#282c34" # Background
set default-fg                  "#bbc2cf" # Foreground

set render-loading              true
set render-loading-fg           "#282c34" # Background
set render-loading-bg           "#bbc2cf" # Foreground

#
# Recolor mode settings
#

set recolor-lightcolor          "#282c34" # Background
set recolor-darkcolor           "#bbc2cf" # Foreground

set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1

map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
set recolor                     true
map p print
